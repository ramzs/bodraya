    .main-bestsellers__wrapper
      .container
        h2.main-bestsellers__headline.headline!= "Новинки и хиты продаж"
        .main-bestsellers__wrapper(data-slider-container)
          .main-bestsellers__swiper-wrapper
            +btn-prev({text: "Сюда"})(data-btn-prev).btn-navigation--big
