            .swiper(data-slider-main-bestsellers, data-delay="750", data-speed="7000")
              .swiper-wrapper
                .main-bestsellers__slide.swiper-slide
                  .main-bestsellers__image-box
                    +picture("slides", "new-1", "jpg", 1558, 759, "Пломбир")
